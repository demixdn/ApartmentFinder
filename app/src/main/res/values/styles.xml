<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light.NoActionBar.Fullscreen">

    </style>

    <style name="EditTextValueStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:maxLength">5</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_weight">4</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium
        </item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">9</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium
        </item>
    </style>

</resources>
